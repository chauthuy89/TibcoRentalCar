@model TibcoCarRentals.Models.BusBooking

@{
    ViewData["Title"] = "Booked";
}
<section class="model-area section-gap" id="cars">
    <div class="container">
        <div class="row d-flex justify-content-center pb-40">
            <div class="col-md-12 pb-40 header-text">
                <h1 class="text-center pb-10">Confirm your booking</h1>
                <p class="text-center">
                    Pick up your bus anytime between 9am to 5pm at <b>133 Tay Street, Invercargill, New Zealand</b>
                </p>
            </div>
        </div>
        <div class="active-model-carusel">
            <div class="row align-items-center single-model item">
                <div class="col-lg-6 model-left">
                    <div class="title justify-content-between d-flex">
                        <h2>$@ViewData["BusDailyPrice"]<span>/Total</span></h2>
                    </div>
                    <p>
                        Year: @Html.DisplayFor(model => model.Bus.Year)
                        <br>
                        Number of Seats: @Html.DisplayFor(model => model.Bus.NumSeats)
                        <br>
                        @Html.DisplayNameFor(model => model.NumOfGuest): @Html.DisplayFor(model => model.NumOfGuest)
                        <br>
                        @Html.DisplayNameFor(model => model.DateToBook): @Html.DisplayFor(model => model.DateToBook)
                        <br>
                        @Html.DisplayNameFor(model => model.SpecialRequirement):  @Html.DisplayFor(model => model.SpecialRequirement)
                    </p>
                    <h3>
                        Are you sure you want to book this Bus?
                    </h3>
                    <a onClick="ConfirmBooking();" class="btn btn-default btn-lg btn-block text-center text-uppercase primary-btn" asp-controller="BusBookings" asp-action="ConfirmBooking" asp-route-id="@Model.BusBookingID">Confirm Booking</a>

                    @*<button asp-controller="BusBooking" asp-action="Edit" asp-route-id="@Model.BookingID" class="btn btn-default btn-lg btn-block text-center text-uppercase primary-btn">Edit Booking</button>*@
                </div>
                <div class="col-lg-6 model-right">
                    <img src="@Html.DisplayFor(model => model.Bus.ImageLocation)" class="singleImage img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>
