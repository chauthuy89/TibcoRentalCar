<!-- Start model Area -->

<section class="model-area section-gap" id="cars">
    <div class="container">
        <div class="row d-flex justify-content-center pb-40">
            <div class="col-md-8 pb-40 header-text">
                <h1 class="text-center pb-10">Choose your Desired Car Model</h1>
                <p class="text-center">
                    Who are in extremely love with eco friendly system.
                </p>
            </div>
        </div>
        <div class="active-model-carusel">


            @foreach (var item in Model.Cars)
            {
                <div class="row align-items-center single-model item">
                    <div class="col-lg-6 model-left">
                        <div class="title justify-content-between d-flex">
                            <h4 class="mt-20">@Html.DisplayFor(modelItem => item.Model)</h4>
                            <h2>$@Html.DisplayFor(modelItem => item.DailyPrice)<span>/day</span></h2>
                        </div>
                        @*<p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                            </p>*@
                        <p>
                            @Html.DisplayNameFor(model => model.Cars[0].NumSeats)         : @Html.DisplayFor(modelItem => item.NumSeats) <br>
                            @Html.DisplayNameFor(model => model.Cars[0].Year)    : @Html.DisplayFor(modelItem => item.Year) <br>
                            Transmission     : Automatic
                        </p>
                        <a class="text-uppercase primary-btn" asp-action="Details" asp-route-id="@item.CarID">Book This Car Now</a>
                    </div>
                    <div class="col-lg-6 model-right">
                        <img class="img-fluid carImage" src="@Html.DisplayFor(modelItem => item.ImageLocation)" alt="">
                    </div>
                </div>
            }
